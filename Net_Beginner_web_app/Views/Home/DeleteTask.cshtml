
@{
}
<div class="modal fade show" id="deleteModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Delete Task</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete Task : <span id="stockIdDisplay">@ViewBag.taskId</span>?</p>
            </div>
            <form asp-action="DeleteTaskData" asp-controller="Home" method="post">
                <input type="hidden" name="taskId" value=@ViewBag.taskId >
            <div class="modal-footer">
                 <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-danger" id="confirmDeleteBtn" data-bs-dismiss="modal">Delete</button>
            </div>
            </form>
        </div>
    </div>
</div>
